<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        #cursor{
            background-color: rgba(81, 255, 32, 0.662);
            filter: blur(2px);
            position: fixed;
            pointer-events: none;
            z-index: 999;
            height: 1vw;
            width: 1vw;
            border-radius: 50%;
            transform: translate(-50%, -50%);
        }
        
        #cursor_follow{
            background-color: rgba(81, 255, 32, 0.662);
            /* background-color: rgba(255, 255, 255, 0.662); */
            filter: blur(4px);
            position: fixed;
            pointer-events: none;
            z-index: 998;
            border-radius: 50%;
            transform: translate(-50%, -50%);
        }
    </style>
    <title>cursor</title>
</head>
<body>
    
    <div id="cursor"></div>
    <div style="height: 0.9vw; width: 0.9vw;" id="cursor_follow"></div>
    <div style="height: 0.8vw; width: 0.8vw;" id="cursor_follow"></div>
    <div style="height: 0.7vw; width: 0.7vw;" id="cursor_follow"></div>
    <div style="height: 0.6vw; width: 0.6vw;" id="cursor_follow"></div>
    <div style="height: 0.5vw; width: 0.5vw;" id="cursor_follow"></div>
    <div style="height: 0.4vw; width: 0.4vw;" id="cursor_follow"></div>
    <div style="height: 0.3vw; width: 0.3vw;" id="cursor_follow"></div>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"
        integrity="sha512-7eHRwcbYkK4d9g/6tD/mhkf++eoTHwpNM9woBxtPUBWm67zeAfFC+HrdoE2GanKeocly/VxeLvIqwvCdk7qScg=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script>
        const cursor = document.querySelector("#cursor");
        const cursor_follow = document.querySelectorAll("#cursor_follow");
        window.addEventListener("mousemove", (dets) => {
            gsap.to(cursor, {
                x: dets.x,
                y: dets.y,
                duration: 0.8,
                ease: "elastic",
            });
            gsap.to(cursor_follow, {
                stagger: 0.01,
                x: dets.x,
                y: dets.y,
                duration: 0.1,
            });
        });

    </script>
</body>
</html>